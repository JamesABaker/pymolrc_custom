# General environment
bg white
set ray_opaque_background, on
unset depth_cue
space cmyk

# Protein styling
hide lines
set cartoon_tube_radius, 1.2

# Raytrace parameters
set ray_trace_mode, 0
set two_sided_lighting, 1
set antialias, 2
set surface_quality, 1
util.cbaw
set light_count,8
set spec_count,1
set shininess, 10
set specular, 0.25
set ambient,0
set direct,0
set reflect,1.5
set ray_shadow_decay_factor, 0.1
set ray_shadow_decay_range, 2
